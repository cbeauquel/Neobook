{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="breadcrumb">
    <p class="signature"><h1>Librairie inclusive de livres numériques à lire et à écouter !</h1></p>
</div>
<section> 
        <div class="list">
            {% for category in categories %}
                <a class="categories" href="{{path('category', {id:category.id})}}" target="parent" title="">
                    <p>{{category.name}}</p>
                </a>
            {% endfor %}
        </div>
</section>
<section>        
    <h2>À paraître</h2>
    <div class="list">
        {% for book in upcoming_books %}
        <a class="book-card" href="{{path('book', {id: book.id})}}" title="">
        <article>
            <div class="book-content">
                <p class="contributor-name">
                    {% for contributor in book.contributors %}
                    {% if contributor.skill.name == 'Auteur'%}
                        {{contributor.firstname}} 
                        {{contributor.lastname}}<br />
                    {% endif %}
                    {% endfor %}</p>
                <img class="cover" src="{{asset(book.cover)}}" alt="{{book.title}}" >
                <p class="book-title">{{book.title}}</p>
            </div>
            <div class="stars">
                <span class="material-symbols-outlined">star</span>
                <span class="material-symbols-outlined">star</span>
                <span class="material-symbols-outlined">star</span>
                <span class="material-symbols-outlined">star</span>
                <span class="material-symbols-outlined">star</span>
            </div>
            <ul class="book-prices">
            {% for format in book.formats %}
                <li class="book-price">{{format.priceHT}}€</li>
                <li class="book-type"><span class="material-symbols-outlined">{{format.type.typeImg}}</span> {{format.type.name}}</li>
            {% endfor %}
            </ul>
        </article>
        </a>
        {% endfor %}
    </div>
</section>



{% endblock %}
