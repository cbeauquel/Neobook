{% if breadcrumbs|length > 0 %}
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            {% for crumb in breadcrumbs %}
                <li class="breadcrumb-item">
                    {% if crumb.url %}
                        <a href="{{ crumb.url }}">{{ crumb.label }}</a>
                    {% else %}
                        <span>{{ crumb.label }}</span>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </nav>
{% endif %}